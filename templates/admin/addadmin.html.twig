{% extends "admin/admin.html.twig" %}
{% block title %}
    {{ 'admin.addadmin.title'|trans }}
{% endblock %}

{% block body %}
    <div id="content">
        <h3>{{ 'admin.addadmin.title'|trans }}</h3>
        <div id="rankings-form">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-3">
                    {{ form_row(form.wcaId) }}
                </div>
                <div class="col-3">
                    {{ form_row(form.role) }}
                </div>
                <div class="col-3">
                    {{ form_row(form.submit, { 'label': 'crud.submit' | trans }) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}